    if (!el)
        return
    el.style.display = 'block';
    el.innerHTML += '<p>Vpisano uporabni≈°ko ime ali geslo ni pravilno ali pa uporabnik ne obstaja.</p>'
}


function logout() {
    var el = document.getElementById('sign-out');
    if (!el)
        return;
    el.addEventListener('click', function () {
        jwt.logout();
        setTimeout(function () {
            location.reload();
        }, 2000);
    });
}

// For buttons toggling modal window on and off
function modal_toggle() {
    var elements = document.getElementsByClassName('modal-toggle');
    for (var i = 0; i < elements.length; i++) {
        elements[i].addEventListener('click', function () {
            toggle_login();
        });
        elements[i].addEventListener('keyup', function (e) {
            if (e.keyCode == 27) {
                toggle_login();
            }
        });
    }
}

